# Development Dockerfile for Backend with better caching
FROM node:18-alpine

# Install dumb-init for proper signal handling
RUN apk add --no-cache dumb-init

# Create app user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001

# Set working directory
WORKDIR /app

# Copy package files FIRST for better Docker layer caching
# This layer will only rebuild if package.json or package-lock.json changes
COPY package*.json ./
COPY server/package*.json ./server/

# Install dependencies in separate layers for better caching
RUN npm ci --only=production && npm cache clean --force
RUN cd server && npm ci && npm cache clean --force

# Copy source code (this layer rebuilds when source changes)
COPY . .

# Change ownership to nodejs user
RUN chown -R nodejs:nodejs /app
USER nodejs

# Change to server directory
WORKDIR /app/server

# Expose port
EXPOSE 3001

# Use dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]

# Default command (can be overridden in docker-compose.yml)
CMD ["npm", "run", "dev"]
