{
  "name": "scheduling-assistant-server",
  "version": "1.0.0",
  "description": "Backend server for Andrea's scheduling assistant",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "start:prod": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "import-data": "ts-node scripts/import-data.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@types/multer": "^1.4.13",
    "axios": "^1.5.0",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.2",
    "express": "^4.18.0",
    "google-auth-library": "^9.0.0",
    "googleapis": "^126.0.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
